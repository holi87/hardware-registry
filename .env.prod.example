# Domain / Traefik (podaj domenę bazową bez "www.")
TRAEFIK_DOMAIN=CHANGE_ME_DOMAIN

# Database
POSTGRES_DB=hardware_registry
POSTGRES_USER=hardware_registry
POSTGRES_PASSWORD=CHANGE_ME_DB_PASSWORD

# Backend
APP_NAME=Hardware Registry API
APP_ENV=prod
API_LOG_LEVEL=INFO
API_PORT=8080
DATABASE_URL=postgresql+psycopg://hardware_registry:CHANGE_ME_DB_PASSWORD@db:5432/hardware_registry
JWT_SECRET=CHANGE_ME_JWT_SECRET
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=14
APP_ENCRYPTION_KEY=CHANGE_ME_APP_ENCRYPTION_KEY
ADMIN_RESET_KEY=CHANGE_ME_ADMIN_RESET_KEY

# Frontend build-time config
VITE_API_URL=/api
